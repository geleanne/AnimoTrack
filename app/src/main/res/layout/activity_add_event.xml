<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green"
    tools:context=".CreateEventActivity">

    <!-- Toolbar for navigation -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@color/green"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Card-like container for the event creation form -->
    <LinearLayout
        android:id="@+id/eventFormContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/background_card"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Horizontal LinearLayout for the back button and title -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical">

            <ImageButton
                android:id="@+id/back_arrow"
                android:layout_width="18dp"
                android:layout_height="16dp"
                android:layout_margin="8dp"
                android:layout_marginStart="12dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/left_arrow"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_width="266dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="75dp"
                android:text="Add A New Event"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Details"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <!-- Event Name -->
        <EditText
            android:id="@+id/eventNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Event Name"
            android:inputType="text"
            android:padding="14dp"
            android:background="@drawable/edittext_background"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <!-- Event Venue -->
        <EditText
            android:id="@+id/eventVenueEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Venue"
            android:inputType="text"
            android:padding="14dp"
            android:background="@drawable/edittext_background"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <!-- Event Date -->
        <EditText
            android:id="@+id/eventDateEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Event Date (MM/DD/YYYY)"
            android:inputType="date"
            android:padding="14dp"
            android:background="@drawable/edittext_background"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <!-- Event Facilitator -->
        <EditText
            android:id="@+id/eventFacilitatorEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Facilitator"
            android:inputType="text"
            android:padding="14dp"
            android:background="@drawable/edittext_background"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <!-- Event Description -->
        <EditText
            android:id="@+id/eventDescriptionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Event Description"
            android:inputType="textMultiLine"
            android:lines="3"
            android:padding="14dp"
            android:background="@drawable/edittext_background"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <!-- Event Category Dropdown -->
        <Spinner
            android:id="@+id/eventCategorySpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/buttonSubmitEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Create Event"
            android:backgroundTint="@color/green"
            android:textColor="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
